<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".gui.activities.MatchInfoActivity">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/basketball"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="Resumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="24dp"
            android:textColor="#000000" android:textSize="26sp" android:textStyle="bold"/>
    <TextView
            android:text="Equipo A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teamA_info"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="68dp" android:layout_marginStart="68dp" android:layout_marginTop="8dp"
            android:textSize="20sp" android:textColor="@android:color/black" android:textStyle="bold"/>
    <TextView
            android:text="Equipo B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teamB_info" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="68dp" android:layout_marginRight="68dp" android:textSize="20sp"
            android:textColor="@android:color/black" android:textStyle="bold"/>
    <TextView
            android:text="Ganador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textColor="@android:color/black"
            android:textSize="24sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="120dp" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreA_info"
            app:layout_constraintTop_toBottomOf="@+id/teamA_info" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" android:layout_marginTop="24dp"
            android:textSize="20sp" android:textStyle="bold" android:text="Marc1" android:textColor="#AE17104E"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreB_info"
            app:layout_constraintTop_toBottomOf="@+id/teamB_info" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" android:layout_marginRight="80dp" android:layout_marginTop="24dp"
            android:textSize="20sp" android:textStyle="bold" android:text="Marc2" android:textColor="#AE17104E"/>
    <TextView
            android:text="Winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/winner_info" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="176dp" android:layout_marginStart="176dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="177dp"
            android:layout_marginRight="177dp" android:textSize="22sp" android:textColor="#1B2555"
            app:layout_constraintHorizontal_bias="0.454" android:textStyle="bold"/>
    <TextView
            android:text="Fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:textSize="22sp"
            android:textColor="@android:color/black" app:layout_constraintTop_toBottomOf="@+id/winner_info"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="176dp"
            android:layout_marginStart="176dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="175dp" android:layout_marginRight="175dp" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0" android:textStyle="bold"/>
    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_info" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="176dp" android:layout_marginStart="176dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="177dp"
            android:layout_marginRight="177dp" android:textSize="20sp" android:textColor="#1B2555"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>